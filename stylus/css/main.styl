

// fonts
patrick = 'Patrick Hand', cursive;
shortStack = 'Short Stack', cursive;

// colors
brighterGreen = #4CAF50;
darkishGreen = #04975F;
blueGreen = #0D9D76;
.green
    background-color: darkishGreen !important

body 
    background-color: #FFF;
    /*color:#777;*/
.main-view 
    /*min-height: 700px;*/
.cover
      position: fixed;
      width: 100%;
      height: 100%;
      z-index: 1000;
      background-color: white;
      background-image: url('/images/WIP-logo-green.png');
      background-repeat: no-repeat;
      background-size: auto 300px;
      background-position: 52% 23%;
      .center
          margin-top: 400px;
.back
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 1000;
    background-color: rgba(255,255,255,.5);
    background-image: linear-gradient(to bottom, rgba(255,255,255,0.9) 0%,rgba(255,255,255,0.9) 100%), url(/images/lalabadie_flyleaf.png);
    background-position: -16% 16%;
    background-size: 45%;
.logo 
    padding: 12px;

.secondary-content 
    color: #4CAF50;

.nav-title 
    font-weight: 300;
    padding-left: 1.5rem;
    font-size: 1.5rem;

.parallax-container 
    height: 400px;

.collection-header,
.collection .collection-header 
    padding-top: 1rem;
    padding-left: 2rem;
    font-size: medium;
    color: #4CAF50;

.collection-item
    width: 100%;
    &:hover 
        background-color: #DDDDDD;
    &.avatar 
        height: 8em;
        padding-left: 7em;
        position: relative;
        width: 100%;
        .thumb-image 
            max-height: 7rem;
            max-width: 5rem;
            display: inline-block;
            left: 1em;
            vertical-align: middle;
            position: absolute;
            
.collection 
    .collection-item.avatar 
        .title 
            color: black;
            margin-top: 0rem;
            margin-bottom: -0.5rem;
            font-weight: 500;
            font-size: 1.2rem;
            padding-left: 2rem;
         p 
            padding-left: 2rem;
            font-weight: 400;
            line-height: 1.3rem;
            color: #777;
            font-size: 1rem;
            padding-top: 5px;

#filter, #results
    margin: 0px;
    

